<script>
  document.addEventListener('DOMContentLoaded', function() {
  const list = document.getElementById('diets-list');
  const clientId = list ? list.dataset.clientId : null;
  let draggedCard = null;

  // --- Drag & Drop ---
  if (list) {
    list.querySelectorAll('.diet-card').forEach(card => {
      card.addEventListener('dragstart', function(e) {
        draggedCard = card;
        card.classList.add('dragging');
        e.dataTransfer.effectAllowed = "move";
        var img = document.createElement("img");
        img.src = "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNk+A8AAksB9Xc4Fz4AAAAASUVORK5CYII=";
        e.dataTransfer.setDragImage(img, 0, 0);
      });

      card.addEventListener('dragend', function() {
        card.classList.remove('dragging');
        draggedCard = null;
      });

      card.addEventListener('dragover', function(e) {
        e.preventDefault();
        if (draggedCard && draggedCard !== card) {
          card.classList.add('over');
        }
      });

      card.addEventListener('dragleave', function(e) {
        card.classList.remove('over');
      });

      card.addEventListener('drop', function(e) {
        e.preventDefault();
        card.classList.remove('over');
        if (draggedCard && draggedCard !== card) {
          swapCards(draggedCard, card);
          showSaving();
          sendOrderToServer();
        }
      });
    });

    function swapCards(cardA, cardB) {
      const parent = cardA.parentNode;
      const siblingA = cardA.nextSibling === cardB ? cardA : cardA.nextSibling;
      parent.insertBefore(cardA, cardB);
      parent.insertBefore(cardB, siblingA);
    }

    function sendOrderToServer() {
      const order = Array.from(list.querySelectorAll('.diet-card')).map((el, idx) => ({
        id: el.dataset.id,
        position: idx + 1
      }));

      fetch(list.dataset.reorderUrl, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": document.querySelector("[name='csrf-token']").content
        },
        body: JSON.stringify({order})
      })
      .then(resp => {
        if (!resp.ok) throw new Error("Erro ao salvar ordem (status " + resp.status + ")");
        return resp.json();
      })
      .then(data => {
        showSaved(data.success);
      })
      .catch(err => {
        showSaved(false);
        showNotice("Erro ao salvar ordem (" + err.message + ")");
      });
    }
  }

  // --- Inline Edit ---
  function closeAllInputs() {
    document.querySelectorAll('.diet-name-input:not(.hidden)').forEach(function(input) {
      input.classList.add('hidden');
      input.classList.remove('saving', 'saved', 'error');
      let span = input.parentElement.querySelector('.diet-name');
      if (span) span.style.display = '';
    });
  }

  document.querySelectorAll('.diet-name').forEach(function(nameSpan) {
    nameSpan.addEventListener('click', function(e) {
      closeAllInputs();
      const input = nameSpan.parentElement.querySelector('.diet-name-input');
      nameSpan.style.display = 'none';
      input.value = nameSpan.textContent.trim();
      input.classList.remove('hidden');
      input.focus();
      input.select();
      e.stopPropagation();
    });
  });

  document.querySelectorAll('.diet-name-input').forEach(function(input) {
    input.addEventListener('blur', saveName);
    input.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        saveName.call(input, e);
      } else if (e.key === 'Escape') {
        cancelEdit(input);
      }
    });
  });

  function saveName(e) {
    const input = this;
    const id = input.dataset.id;
    const nameSpan = input.parentElement.querySelector('.diet-name');
    const newName = input.value.trim();
    if (!clientId) {
      cancelEdit(input);
      return;
    }
    if (newName.length === 0 || newName === nameSpan.textContent.trim()) {
      cancelEdit(input);
      return;
    }
    input.classList.add('saving');
    input.classList.remove('error', 'saved');

    fetch(`/clients/${clientId}/diets/${id}`, {
      method: 'PATCH',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json',
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      },
      body: JSON.stringify({ diet: { name: newName } })
    })
    .then(resp => resp.ok ? resp.json() : Promise.reject(resp))
    .then(data => {
      input.classList.remove('saving', 'error');
      input.classList.add('saved');
      nameSpan.textContent = data.name || newName;
      setTimeout(() => input.classList.remove('saved'), 800);
      nameSpan.style.display = '';
      input.classList.add('hidden');
      if (data.notice) showNotice(data.notice);
    })
    .catch(() => {
      input.classList.remove('saving', 'saved');
      input.classList.add('error');
      setTimeout(() => {
        input.classList.remove('error');
        cancelEdit(input);
      }, 1500);
    });
  }

  function cancelEdit(input) {
    input.classList.add('hidden');
    input.classList.remove('saving', 'saved', 'error');
    input.parentElement.querySelector('.diet-name').style.display = '';
  }

  // --- Notice helpers ---
  function showNotice(message) {
    let notice = document.getElementById('diet-notice');
    if (!notice) {
      notice = document.createElement('div');
      notice.id = 'diet-notice';
      notice.style.position = 'fixed';
      notice.style.top = '20px';
      notice.style.right = '20px';
      notice.style.background = '#38a169';
      notice.style.color = 'white';
      notice.style.padding = '10px 20px';
      notice.style.borderRadius = '8px';
      notice.style.zIndex = '9999';
      notice.style.fontWeight = 'bold';
      document.body.appendChild(notice);
    }
    notice.textContent = message;
    notice.style.display = 'block';
    setTimeout(() => { notice.style.display = 'none'; }, 2000);
  }

  function showSaving() {
    let notice = document.getElementById('save-notice');
    if (!notice) {
      notice = document.createElement('div');
      notice.id = 'save-notice';
      notice.style.position = 'fixed';
      notice.style.top = '20px';
      notice.style.right = '20px';
      notice.style.background = '#4299e1';
      notice.style.color = 'white';
      notice.style.padding = '10px 20px';
      notice.style.borderRadius = '8px';
      notice.style.zIndex = '9999';
      notice.style.fontWeight = 'bold';
      document.body.appendChild(notice);
    }
    notice.textContent = "Salvando ordem...";
    notice.style.display = 'block';
  }

  function showSaved(success) {
    let notice = document.getElementById('save-notice');
    if (notice) {
      notice.textContent = success ? "Ordem salva!" : "Erro ao salvar ordem";
      setTimeout(() => { notice.style.display = 'none'; }, 1500);
    }
  }
  });
</script>
<script>
function showTipToast(message, duration = 4000) {
  let toast = document.getElementById('tip-toast');
  if (!toast) {
    toast = document.createElement('div');
    toast.id = 'tip-toast';
    toast.style.position = 'fixed';
    toast.style.top = '20px';
    toast.style.right = '20px';
    toast.style.background = '#4299e1';
    toast.style.color = 'white';
    toast.style.padding = '14px 24px';
    toast.style.borderRadius = '8px';
    toast.style.zIndex = '9999';
    toast.style.fontWeight = 'bold';
    toast.style.boxShadow = '0 2px 8px rgba(0,0,0,0.15)';
    toast.style.display = 'flex';
    toast.style.alignItems = 'center';
    toast.innerHTML = `<span>${message}</span><button id="tip-toast-ok" style="margin-left:16px;background:#2563eb;color:white;border:none;border-radius:5px;padding:4px 12px;cursor:pointer">OK</button>`;
    document.body.appendChild(toast);

    document.getElementById('tip-toast-ok').onclick = function() {
      toast.remove();
      localStorage.setItem('tipToastDismissed', '1');
    };
  } else {
    toast.style.display = 'flex';
    toast.querySelector('span').textContent = message;
  }
  if (!localStorage.getItem('tipToastDismissed')) {
    setTimeout(() => {
      if (toast) toast.style.display = 'none';
    }, duration);
  }
}

// Exemplo de uso: S√≥ mostra se n√£o foi dispensado antes
if (!localStorage.getItem('tipToastDismissed')) {
