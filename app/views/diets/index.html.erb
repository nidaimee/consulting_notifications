<!-- Breadcrumb e Header -->
<div class="mb-8 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
      Dieta de <%= @client.name %>
    </h2>
    <nav>
      <ol class="flex items-center gap-2 text-sm text-gray-500">
        <%= link_to clients_path, class: "hover:text-blue-600" do %>
          Clientes
        <% end %>
        <span>/</span>
        <%= link_to @client, class: "hover:text-blue-600" do %>
          <%= @client.name %>
        <% end %>
        <span>/</span>
        <span class="text-gray-700 dark:text-white font-semibold">Dietas</span>
      </ol>
    </nav>
  </div>
  <div class="flex flex-wrap items-center gap-3">
    <!-- PDF Dropdown -->
    <div class="relative" x-data="{ dropdownOpen: false }" @click.outside="dropdownOpen = false">
      <button @click="dropdownOpen = !dropdownOpen"
        class="inline-flex items-center gap-2.5 rounded bg-blue-600 px-4 py-2 text-white font-medium hover:bg-blue-700 transition">
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        PDF
      </button>
      <div x-show="dropdownOpen"
        class="absolute right-0 mt-2 w-40 rounded border bg-white py-2 shadow">
        <%= link_to diet_pdf_client_path(@client, format: :pdf, theme: 'light'), class: "block px-4 py-2 text-gray-800 hover:bg-gray-100", target: "_blank" do %>
          ‚òÄÔ∏è Tema Claro
        <% end %>
        <%= link_to diet_pdf_client_path(@client, format: :pdf, theme: 'dark'), class: "block px-4 py-2 text-gray-800 hover:bg-gray-100", target: "_blank" do %>
          üåô Tema Escuro
        <% end %>
      </div>
    </div>
    <%= link_to new_client_diet_path(@client), 
      class: "inline-flex items-center gap-2.5 rounded bg-green-600 px-4 py-2 text-white font-medium hover:bg-green-700 transition" do %>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Nova Refei√ß√£o
    <% end %>
    <%= link_to @client, 
      class: "inline-flex items-center gap-2.5 rounded bg-gray-200 px-4 py-2 text-gray-700 font-medium hover:bg-gray-300 transition" do %>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Voltar
    <% end %>
  </div>
</div>

<% if @diets.any? %>
  <!-- Cards das refei√ß√µes -->
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
    <% @diets.each do |diet| %>
      <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm flex flex-col gap-4">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900"><%= diet.name %></h3>
          <span class="rounded bg-blue-50 px-3 py-1 text-xs font-bold text-blue-600">
            <%= diet.total_calories.round(1) %> kcal
          </span>
        </div>
        <% if diet.notes.present? %>
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <span><%= diet.notes.truncate(80) %></span>
          </div>
        <% end %>
        <% if diet.diet_foods.any? %>
          <ul class="flex flex-col gap-1 text-sm text-gray-700">
            <% diet.diet_foods.limit(5).each do |df| %>
              <li>
                <span class="font-bold text-gray-900"><%= df.quantity_grams.to_i %>g</span>
                <%= df.food.name.split(',').first %>
              </li>
            <% end %>
            <% if diet.diet_foods.count > 5 %>
              <li class="text-xs text-gray-400">+ <%= diet.diet_foods.count - 5 %> mais alimento<%= 's' if diet.diet_foods.count - 5 > 1 %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-sm italic text-gray-400">Nenhum alimento adicionado</p>
        <% end %>
        <!-- Macros -->
        <div class="grid grid-cols-3 gap-2">
          <div class="rounded bg-blue-50 p-2 text-center text-blue-700">
            <span class="font-bold"><%= diet.total_protein.round(1) %>g</span>
            <span class="block text-xs">Prote√≠na</span>
          </div>
          <div class="rounded bg-green-50 p-2 text-center text-green-700">
            <span class="font-bold"><%= diet.total_carbs.round(1) %>g</span>
            <span class="block text-xs">Carboidratos</span>
          </div>
          <div class="rounded bg-red-50 p-2 text-center text-red-700">
            <span class="font-bold"><%= diet.total_fat.round(1) %>g</span>
            <span class="block text-xs">Gordura</span>
          </div>
        </div>
        <!-- Footer -->
        <div class="flex gap-2 pt-3">
          <%= link_to client_diet_path(@client, diet), class: "flex-1 rounded border border-blue-600 bg-white px-2 py-1 text-blue-600 text-sm hover:bg-blue-50" do %>
            Editar
          <% end %>
          <%= button_to client_diet_path(@client, diet), method: :delete, data: { turbo_confirm: "Excluir #{diet.name}?" }, class: "flex-1 rounded border border-red-600 bg-white px-2 py-1 text-red-600 text-sm hover:bg-red-50" do %>
            Excluir
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- Resumo total de macros -->
  <div class="mt-8 grid grid-cols-2 gap-6 md:grid-cols-4">
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow text-center">
      <h3 class="text-2xl font-bold text-orange-700"><%= @daily_total_calories.round(1) %></h3>
      <p class="text-sm text-gray-500">Total Kcal</p>
    </div>
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow text-center">
      <h3 class="text-2xl font-bold text-blue-700"><%= @diets.sum(&:total_protein).round(1) %>g</h3>
      <p class="text-sm text-gray-500">Prote√≠nas</p>
    </div>
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow text-center">
      <h3 class="text-2xl font-bold text-green-700"><%= @diets.sum(&:total_carbs).round(1) %>g</h3>
      <p class="text-sm text-gray-500">Carboidratos</p>
    </div>
    <div class="rounded-lg border border-gray-200 bg-white p-6 shadow text-center">
      <h3 class="text-2xl font-bold text-red-700"><%= @diets.sum(&:total_fat).round(1) %>g</h3>
      <p class="text-sm text-gray-500">Gorduras</p>
    </div>
  </div>
<% else %>
  <div class="py-12 text-center">
    <h4 class="mb-4 text-lg text-gray-500">Comece criando a primeira refei√ß√£o para <%= @client.name %>!</h4>
    <%= link_to new_client_diet_path(@client), 
      class: "inline-flex items-center gap-2.5 rounded bg-green-600 px-6 py-2 text-white font-medium hover:bg-green-700 transition" do %>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Nova Refei√ß√£o
    <% end %>
  </div>
<% end %>