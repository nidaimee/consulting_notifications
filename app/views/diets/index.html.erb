            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Nova Refei√ß√£o
        <% end %>
      </div>
    <% end %>
  </div>
  <!-- Observa√ß√µes do cliente: lateral em telas m√©dias+ e abaixo em telas pequenas -->
  <div class="md:w-96 w-full shrink-0">
    <div class="mb-6 rounded-lg border border-gray-200 bg-white p-6 shadow">
      <h3 class="mb-2 text-lg font-semibold text-gray-900 flex items-center gap-2">
        <span>üìù</span> Orienta√ß√µes
