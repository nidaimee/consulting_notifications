            placeholder: "Adicione observa√ß√µes sobre recomenda√ß√µes gerais, modo de preparo, hidrata√ß√£o, etc." %>
        </div>
        <div class="flex items-center gap-4 mt-2">
          <%= form.hidden_field :redirect_to_diets_index, value: "1" %>
          <%= form.submit @client.persisted? ?  "Salvar Orienta√ß√£o" : "Criar Cliente", 
              class: "inline-flex items-center justify-center rounded-md bg-blue-500 px-6 py-3 text-center font-medium text-white hover:bg-opacity-90" %>
        </div>
      <% end %>
      <% if @client.note.present? %>
        <div class="mt-4 text-sm text-gray-700">
          <ul class="space-y-1">
            <% @client.note.split("\n").each do |linha| %>
              <li class="pl-2 border-l-2 border-blue-200"><%= linha.strip %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const list = document.getElementById('diets-list');
    let draggedCard = null;

    list.querySelectorAll('.diet-card').forEach(card => {
      card.addEventListener('dragstart', function(e) {
        draggedCard = card;
        card.classList.add('dragging');
        e.dataTransfer.effectAllowed = "move";
        // Para Firefox, define uma imagem vazia
        var img = document.createElement("img");
        img.src = "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNk+A8AAksB9Xc4Fz4AAAAASUVORK5CYII=";
        e.dataTransfer.setDragImage(img, 0, 0);
      });

      card.addEventListener('dragend', function() {
        card.classList.remove('dragging');
        draggedCard = null;
      });

      card.addEventListener('dragover', function(e) {
        e.preventDefault();
        if (draggedCard && draggedCard !== card) {
          card.classList.add('over');
        }
      });

      card.addEventListener('dragleave', function(e) {
        card.classList.remove('over');
      });

      card.addEventListener('drop', function(e) {
        e.preventDefault();
        card.classList.remove('over');
        if (draggedCard && draggedCard !== card) {
          // Troca os dois cards de posi√ß√£o no DOM
          swapCards(draggedCard, card);
          showSaving();
          sendOrderToServer();
        }
      });
    });

    function swapCards(cardA, cardB) {
      const parent = cardA.parentNode;
      // Pega o pr√≥ximo irm√£o de cardA (pode ser null)
      const siblingA = cardA.nextSibling === cardB ? cardA : cardA.nextSibling;
      parent.insertBefore(cardA, cardB);
      parent.insertBefore(cardB, siblingA);
    }

    function sendOrderToServer() {
      const order = Array.from(list.querySelectorAll('.diet-card')).map((el, idx) => ({
        id: el.dataset.id,
        position: idx + 1
      }));

      fetch(list.dataset.reorderUrl, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": document.querySelector("[name='csrf-token']").content
        },
        body: JSON.stringify({order})
      }).then(resp => resp.json())
        .then(data => {
          showSaved(data.success);
        });
    }

    function showSaving() {
      let notice = document.getElementById('save-notice');
      if (!notice) {
        notice = document.createElement('div');
        notice.id = 'save-notice';
        notice.style.position = 'fixed';
        notice.style.top = '20px';
        notice.style.right = '20px';
        notice.style.background = '#4299e1';
        notice.style.color = 'white';
        notice.style.padding = '10px 20px';
        notice.style.borderRadius = '8px';
        notice.style.zIndex = '9999';
        notice.style.fontWeight = 'bold';
        document.body.appendChild(notice);
      }
      notice.textContent = "Salvando ordem...";
      notice.style.display = 'block';
    }

    function showSaved(success) {
      let notice = document.getElementById('save-notice');
      if (notice) {
        notice.textContent = success ? "Ordem salva!" : "Erro ao salvar ordem";
        setTimeout(() => { notice.style.display = 'none'; }, 1500);
      }
    }
  });
</script>
<style>
  .diet-card {
    transition: box-shadow 0.2s, transform 0.2s;
    cursor: grab;
    position: relative;
  }
  .diet-card.dragging {
    opacity: 0.7;
    box-shadow: 0 4px 24px 0 rgba(66,153,225,0.2), 0 0 0 3px #4299e1;
    transform: scale(0.98) rotate(-1deg);
    z-index: 2;
  }
  .diet-card.over {
    box-shadow: 0 0 0 3px #38a169 inset;
    background: #e6fffa;
  }
  .diet-card .order-index {
    position: absolute;
    top: 8px;
    left: 8px;
    background: #4299e1;
    color: #fff;
    font-size: 0.85em;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    text-align: center;
    line-height: 24px;
    font-weight: bold;
  }
</style>
