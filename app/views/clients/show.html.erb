<div class="row mb-4">
  <div class="col-md-8">
    <h1><%= @client.name %></h1>
    
  </div>
  <div class="col-md-12 text-end">
    <%= link_to "Ver Dieta", client_diets_path(@client), 
                            class: "btn btn-primary" %>
    <%= link_to "Editar Cliente", edit_client_path(@client), class: "btn btn-warning" %>

    <%= link_to "Voltar a Clientes", clients_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="row mb-6">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5>Informações do Cliente</h5>
      </div>
      <div class="card-body">
         <p class="text-muted"><%= @client.phone_number %></p>
        <p><strong>Status:</strong> 
          <span class="badge bg-<%= @client.status == 'active' ? 'success' : @client.status == 'completed' ? 'primary' : 'secondary' %>">
            <%= @client.status.capitalize %>
          </span>
        </p>
       
        <p><strong>Período:</strong> <%= @client.start_date.strftime('%d/%m/%Y') %> a <%= @client.end_date.strftime('%d/%m/%Y') %></p>
        <p><strong>Plano:</strong>   <%= @client.plan_type.present? ? @client.plan_type.capitalize : 'Não informado' %></p>
        <p><strong>Valor Pago:</strong> R$ <%= number_with_precision(@client.paid_amount, precision: 2, delimiter: '.', separator: ',') %></p>
        <% if @client.note.present? %>
          <p><strong>Observações:</strong><br>
          <%= simple_format(@client.note) %></p>
        <% end %>
      </div>
    </div>
  </div>

  


<% if @client.diets.present? %>
<% else %>
  <div class="alert alert-info">
    Nenhuma refeição cadastrada para este cliente.
  </div>
<% end %>

