<!-- Breadcrumb -->
<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-title-md2 font-semibold text-black dark:text-white">
      <%= @client.name %>
    </h2>
    <nav>
      <ol class="flex items-center gap-2">
        <%= link_to clients_path, class: "font-medium text-primary hover:text-primary/80" do %>
          Clientes
        <% end %>
        <li class="font-medium">/</li>
        <li class="font-medium text-black dark:text-white">Detalhes</li>
      </ol>
    </nav>
  </div>
</div>

<!-- Actions -->
<div class="mb-6 flex flex-wrap items-center justify-end gap-3">
  <%= link_to client_diets_path(@client), 
      class: "inline-flex items-center justify-center gap-2.5 rounded-md bg-blue-500 px-6 py-2.5 text-center font-medium text-white transition hover:bg-primary/90 hover:shadow-lg" do %>
    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    Ver Dietas
  <% end %>
  
  <%= link_to edit_client_path(@client), 
      class: "inline-flex items-center justify-center gap-2.5 rounded-md bg-blue-500 px-6 py-2.5 text-center font-medium text-white transition hover:bg-warning/90 hover:shadow-lg" do %>
    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
    </svg>
    Editar Cliente
  <% end %>

  <%= link_to clients_path, 
      class: "inline-flex items-center justify-center gap-2.5 rounded-md border border-stroke bg-gray px-6 py-2.5 text-center font-medium text-black transition hover:bg-gray/90 hover:shadow-lg dark:border-strokedark dark:bg-meta-4 dark:text-white" do %>
    <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Voltar
  <% end %>
</div>

<!-- Client Info Cards Grid -->
<div class="grid grid-cols-1 gap-6 xl:grid-cols-3">
  
  <!-- Main Info Card -->
  <div class="xl:col-span-2">
    <div class="rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
      <div class="border-b border-stroke px-6.5 py-4 dark:border-strokedark">
        <h3 class="text-xl font-semibold text-black dark:text-white">
          Informações do Cliente
        </h3>
      </div>
      <div class="p-6.5">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          
          <!-- Contact Info -->
          <div class="space-y-4">
            <div>
              <div class="mb-2 flex items-center gap-2">
                <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-sm font-medium text-black dark:text-white">Telefone</span>
              </div>
              <div class="text-base text-slate-600 dark:text-slate-400">
                <%= @client.phone_number %>
              </div>
            </div>

            <div>
              <div class="mb-2 flex items-center gap-2">
                <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-sm font-medium text-black dark:text-white">Email</span>
              </div>
              <div class="text-base text-slate-600 dark:text-slate-400">
                <%= @client.email || 'Não informado' %>
              </div>
            </div>
          </div>

          <!-- Status and Plan Info -->
          <div class="space-y-4">
            <div>
              <div class="mb-2 flex items-center gap-2">
                <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-sm font-medium text-black dark:text-white">Status</span>
              </div>
              <div>
                <% case @client.status
                   when 'active' %>
                  <span class="inline-flex rounded-full bg-green-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Ativo
                  </span>
                <% when 'completed' %>
                  <span class="inline-flex rounded-full bg-red-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Concluído
                  </span>
                <% when 'pending' %>
                  <span class="inline-flex rounded-full bg-yellow-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                    Pendente
                  </span>
                <% else %>
                  <span class="inline-flex rounded-full bg-slate-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <%= @client.status.present? ? @client.status : 'Indefinido' %>
                  </span>
                <% end %>
              </div>
            </div>

            <div>
              <div class="mb-2 flex items-center gap-2">
                <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <span class="text-sm font-medium text-black dark:text-white">Plano</span>
              </div>
              <div>
                <% case @client.plan_type&.downcase
                   when 'monthly' %>
                  <span class="inline-flex rounded-full bg-blue-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    Mensal
                  </span>
                <% when 'quarterly' %>
                  <span class="inline-flex rounded-full bg-purple-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    Trimestral
                  </span>
                <% when 'yearly' %>
                  <span class="inline-flex rounded-full bg-green-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    Anual
                  </span>
                <% else %>
                  <span class="inline-flex rounded-full bg-slate-500 px-3 py-1 text-sm font-medium text-white">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <%= @client.plan_type.present? ? @client.plan_type : 'Não informado' %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Period Info -->
        <div class="mt-6 border-t border-stroke pt-6 dark:border-strokedark">
          <div class="mb-2 flex items-center gap-2">
            <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span class="text-sm font-medium text-black dark:text-white">Período de Acompanhamento</span>
          </div>
          <div class="flex items-center gap-2 text-base text-slate-600 dark:text-slate-400">
            <span class="rounded bg-slate-100 px-2 py-1 text-sm font-medium dark:bg-slate-800">
              <%= @client.start_date.strftime('%d/%m/%Y') %>
            </span>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
            <span class="rounded bg-slate-100 px-2 py-1 text-sm font-medium dark:bg-slate-800">
              <%= @client.end_date.strftime('%d/%m/%Y') %>
            </span>
          </div>
          <div class="mt-2 text-sm text-slate-500">
            <% days_total = (@client.end_date - @client.start_date).to_i %>
            <% days_remaining = (@client.end_date - Date.current).to_i %>
            <%= pluralize(days_total, 'dia') %> total
            <% if days_remaining > 0 %>
              • <%= pluralize(days_remaining, 'dia') %> restante(s)
            <% elsif days_remaining == 0 %>
              • <span class="text-warning">Última dia</span>
            <% else %>
              • <span class="text-danger">Vencido há <%= pluralize(days_remaining.abs, 'dia') %></span>
            <% end %>
          </div>
        </div>

        <!-- Notes -->
        <% if @client.note.present? %>
          <div class="mt-6 border-t border-stroke pt-6 dark:border-strokedark">
            <div class="mb-2 flex items-center gap-2">
              <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <span class="text-sm font-medium text-black dark:text-white">Observações</span>
            </div>
            <div class="rounded-lg bg-slate-50 p-4 text-base text-slate-600 dark:bg-slate-800 dark:text-slate-400">
              <%= simple_format(@client.note) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Quick Stats Card -->
  <div class="xl:col-span-1">
    <div class="rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
      <div class="border-b border-stroke px-6.5 py-4 dark:border-strokedark">
        <h3 class="text-xl font-semibold text-black dark:text-white">
          Resumo Financeiro
        </h3>
      </div>
      <div class="p-6.5">
        <div class="space-y-4">
          <div class="text-center">
            <div class="mb-2 flex items-center justify-center">
              <svg class="h-8 w-8 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="text-2xl font-bold text-black dark:text-white">
              R$ <%= number_with_precision(@client.paid_amount, precision: 2, delimiter: '.', separator: ',') %>
            </h4>
            <p class="text-sm text-slate-600 dark:text-slate-400">Valor Pago</p>
          </div>

          <div class="border-t border-stroke pt-4 dark:border-strokedark">
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600 dark:text-slate-400">Início:</span>
                <span class="text-sm font-medium text-black dark:text-white">
                  <%= @client.start_date.strftime('%d/%m/%Y') %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600 dark:text-slate-400">Término:</span>
                <span class="text-sm font-medium text-black dark:text-white">
                  <%= @client.end_date.strftime('%d/%m/%Y') %>
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-slate-600 dark:text-slate-400">Dietas:</span>
                <span class="text-sm font-medium text-black dark:text-white">
                  <%= pluralize(@client.diets.count, 'refeição', 'refeições') %>
                </span>
              </div>
            </div>
          </div>

          <!-- Quick Action -->
          <div class="border-t border-stroke pt-4 dark:border-strokedark">
            <%= link_to client_diets_path(@client), 
                class: "flex w-full items-center justify-center gap-2 rounded-lg bg-primary px-4 py-3 text-center font-medium text-white transition hover:bg-primary/90" do %>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Gerenciar Dietas
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Diet Status Section -->
<% if @client.diets.present? %>
  
<% else %>
  <div class="mt-6">
    <div class="flex w-full border-l-6 border-warning bg-warning bg-opacity-[15%] px-7 py-8 shadow-md dark:bg-[#1B1B24] dark:bg-opacity-30">
      
      <div class="w-full">
        <h5 class="mb-3 text-lg font-semibold text-[#9D5425]">
          Nenhuma dieta cadastrada
        </h5>
        <p class="mb-4 leading-relaxed text-[#D0915C]">
          Este cliente ainda não possui nenhuma dieta cadastrada. Clique no botão abaixo para começar a criar as refeições.
        </p>
        <%= link_to client_diets_path(@client), 
            class: "inline-flex items-center justify-center gap-2 rounded-md bg-yellow-500 px-4 py-2 text-center font-medium text-white transition hover:bg-warning/90" do %>
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Criar Primeira Dieta
        <% end %>
      </div>
    </div>
  </div>
<% end %>

