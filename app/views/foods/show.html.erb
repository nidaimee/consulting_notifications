<div class="row mb-4">
  <div class="col-md-8">
    <h1><%= @food.name %></h1>
    <p class="text-muted">Categoria: <%= @food.category %></p>
  </div>
  <div class="col-md-4 text-end">
    <%= link_to "Editar", edit_food_path(@food), class: "btn btn-warning" %>
    <%= link_to "Voltar", foods_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5>Informações Nutricionais (por 100g)</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-6">
            <div class="card bg-warning text-white text-center">
              <div class="card-body">
                <h2><%= @food.calories_per_100g %></h2>
                <p class="mb-0">kcal</p>
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="card bg-primary text-white text-center">
              <div class="card-body">
                <h2><%= @food.protein_per_100g %></h2>
                <p class="mb-0">g Proteína</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="row">
          <div class="col-6">
            <div class="card bg-info text-white text-center">
              <div class="card-body">
                <h2><%= @food.carbs_per_100g %></h2>
                <p class="mb-0">g Carboidratos</p>
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="card bg-danger text-white text-center">
              <div class="card-body">
                <h2><%= @food.fat_per_100g %></h2>
                <p class="mb-0">g Gorduras</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
