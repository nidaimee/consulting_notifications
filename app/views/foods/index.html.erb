<!-- Breadcrumb e Header -->
<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-2xl font-semibold text-slate-800 dark:text-white">
        Base de Alimentos
      </h2>
    <nav>
      <p class="mt-1 text-sm font-medium text-slate-500">
        Total: <%= @foods.count %> alimento(s)
        <% if params[:search].present? %>
          - Mostrando resultados para "<span class="font-medium text-slate-700"><%= params[:search] %></span>"
        <% end %>
      </p>
    </nav>
  </div>
  
  <div class="flex items-center gap-3">
    <%= link_to new_food_path, 
        class: "inline-flex items-center justify-center gap-2.5 rounded-md bg-green-600 px-6 py-2.5 text-center font-medium text-white transition hover:bg-green-700 hover:shadow-lg" do %>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Novo Alimento
    <% end %>
  </div>
</div>

<!-- Busca de Alimentos -->
<div class="mb-6 rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
  <div class="border-b border-stroke px-6.5 py-4 dark:border-strokedark">
    <h3 class="text-lg font-semibold text-black dark:text-white">
      Buscar Alimento
    </h3>
  </div>
  
  <div class="p-6.5">
    <%= form_with url: foods_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="flex flex-col gap-4 sm:flex-row">
        <!-- Campo de busca -->
        <div class="flex-1">
          <%= form.text_field :search, 
              value: params[:search],
              placeholder: "Digite o nome do alimento (ex: Açúcar, Arroz, Frango...)",
              class: "w-full rounded-lg border-[1.5px] border-stroke bg-transparent px-5 py-3 font-medium outline-none transition focus:border-primary active:border-primary dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary" %>
        </div>
        
        <!-- Filtro por categoria -->
        <div class="sm:w-48">
          <%= form.select :category,
              options_for_select([
                ['Todas as categorias', ''],
                *@categories.map { |cat| [cat || 'Sem categoria', cat] }
              ], params[:category]),
              {},
              class: "w-full rounded-lg border-[1.5px] border-stroke bg-transparent px-5 py-3 font-medium outline-none transition focus:border-primary active:border-primary dark:border-form-strokedark dark:bg-form-input dark:focus:border-primary" %>
        </div>
        
        <!-- Botões -->
        <div class="flex gap-2">
          <%= form.submit "Buscar", 
              class: "inline-flex items-center justify-center rounded-md bg-slate-600 px-6 py-3 text-center font-medium text-white transition hover:bg-slate-700" %>
          <%= link_to foods_path, 
              class: "inline-flex items-center justify-center rounded-md bg-slate-600 px-6 py-3 text-center font-medium text-white transition hover:bg-slate-700" do %>
            Limpar
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Resultado da Busca -->
<% if params[:search].present? %>
  <div class="mb-6 rounded-sm border border-stroke bg-white p-4 shadow-default dark:border-strokedark dark:bg-boxdark">
    <div class="flex items-center gap-3">
      <svg class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h4 class="font-medium text-black dark:text-white">
          <% if @foods.any? %>
            Encontrados <%= @foods.count %> alimento(s)
          <% else %>
            Nenhum alimento encontrado
          <% end %>
        </h4>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          <% if @foods.any? %>
            para "<strong><%= params[:search] %></strong>"
            <% if params[:category].present? %>
              na categoria "<strong><%= params[:category] %></strong>"
            <% end %>
          <% else %>
            para "<strong><%= params[:search] %></strong>". Talvez você queira 
            <%= link_to "cadastrar este alimento", new_food_path(name: params[:search]), 
                class: "text-green-600 hover:text-green-700 font-medium underline" %>.
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>

<% if @foods.any? %>
  <% if params[:search].present? || params[:category].present? %>
    <!-- Resultados da busca - exibir em uma única tabela -->
    <div class="rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
      <!-- Header dos resultados -->
      <div class="border-b border-stroke px-6.5 py-4 dark:border-strokedark">
        <h3 class="text-lg font-semibold text-black dark:text-white">
          Resultados da Busca
          <% if params[:category].present? %>
            - <%= params[:category] %>
          <% end %>
        </h3>
      </div>
      
      <!-- Tabela de resultados -->
      <div class="p-6.5">
        <div class="max-w-full overflow-x-auto">
          <table class="w-full table-auto">
            <thead>
              <tr class="bg-gray-2 text-left dark:bg-meta-4">
                <th class="min-w-[220px] px-4 py-4 font-medium text-black dark:text-white xl:pl-11">
                  Alimento
                </th>
                <th class="min-w-[150px] px-4 py-4 font-medium text-black dark:text-white">
                  Categoria
                </th>
                <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                  Calorias/100g
                </th>
                <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                  Proteína/100g
                </th>
                <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                  Carb/100g
                </th>
                <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                  Gordura/100g
                </th>
                <th class="px-4 py-4 font-medium text-black dark:text-white">
                  Ações
                </th>
              </tr>
            </thead>
            <tbody>
              <% @foods.each do |food| %>
                <tr>
                  <td class="border-b border-[#eee] px-4 py-5 pl-9 dark:border-strokedark xl:pl-11">
                    <h5 class="font-medium text-black dark:text-white">
                      <%= food.name %>
                    </h5>
                  </td>
                  <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                    <span class="inline-flex rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800 dark:bg-slate-800 dark:text-slate-200">
                      <%= food.category || "Sem categoria" %>
                    </span>
                  </td>
                  <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                    <span class="text-black dark:text-white">
                      <%= food.calories_per_100g %>kcal
                    </span>
                  </td>
                  <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                    <span class="text-blue-600 dark:text-blue-400 font-medium">
                      <%= food.protein_per_100g %>g
                    </span>
                  </td>
                  <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                    <span class="text-amber-600 dark:text-amber-400 font-medium">
                      <%= food.carbs_per_100g %>g
                    </span>
                  </td>
                  <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                    <span class="text-red-600 dark:text-red-400 font-medium">
                      <%= food.fat_per_100g %>g
                    </span>
                  </td>
                  <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                    <div class="flex items-center space-x-3.5">
                      <%= link_to food, 
                          class: "rounded-md bg-blue-600 p-2 text-white transition hover:bg-blue-700 hover:shadow-md" do %>
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                      
                      <%= link_to edit_food_path(food), 
                          class: "rounded-md bg-amber-500 p-2 text-white transition hover:bg-amber-600 hover:shadow-md" do %>
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                      
                      <%= button_to food, 
                          method: :delete,
                          data: { turbo_confirm: "Tem certeza?" },
                          class: "rounded-md bg-red-600 p-2 text-white transition hover:bg-red-700 hover:shadow-md" do %>
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Exibição normal por categorias (quando não há busca) -->
    <% @categories.each do |category| %>
      <% category_foods = @foods.where(category: category) %>
      <% if category_foods.any? %>
        <!-- Card para cada categoria -->
        <div class="mb-6 rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
          <!-- Header da categoria -->
          <div class="border-b border-stroke px-6.5 py-4 dark:border-strokedark">
            <h3 class="text-lg font-semibold text-black dark:text-white">
              <%= category || "Sem Categoria" %>
              <span class="ml-2 text-sm font-normal text-slate-500">
                (<%= category_foods.count %> alimento<%= category_foods.count == 1 ? '' : 's' %>)
              </span>
            </h3>
          </div>
          
          <!-- Tabela de alimentos -->
          <div class="p-6.5">
            <div class="max-w-full overflow-x-auto">
              <table class="w-full table-auto">
                <thead>
                  <tr class="bg-gray-2 text-left dark:bg-meta-4">
                    <th class="min-w-[220px] px-4 py-4 font-medium text-black dark:text-white xl:pl-11">
                      Alimento
                    </th>
                    <th class="min-w-[150px] px-4 py-4 font-medium text-black dark:text-white">
                      Calorias/100g
                    </th>
                    <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                      Proteína/100g
                    </th>
                    <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                      Carb/100g
                    </th>
                    <th class="min-w-[120px] px-4 py-4 font-medium text-black dark:text-white">
                      Gordura/100g
                    </th>
                    <th class="px-4 py-4 font-medium text-black dark:text-white">
                      Ações
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% category_foods.each do |food| %>
                    <tr>
                      <td class="border-b border-[#eee] px-4 py-5 pl-9 dark:border-strokedark xl:pl-11">
                        <h5 class="font-medium text-black dark:text-white">
                          <%= food.name %>
                        </h5>
                      </td>
                      <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                        <span class="text-black dark:text-white">
                          <%= food.calories_per_100g %>kcal
                        </span>
                      </td>
                      <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                        <span class="text-blue-600 dark:text-blue-400 font-medium">
                          <%= food.protein_per_100g %>g
                        </span>
                      </td>
                      <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                        <span class="text-amber-600 dark:text-amber-400 font-medium">
                          <%= food.carbs_per_100g %>g
                        </span>
                      </td>
                      <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                        <span class="text-red-600 dark:text-red-400 font-medium">
                          <%= food.fat_per_100g %>g
                        </span>
                      </td>
                      <td class="border-b border-[#eee] px-4 py-5 dark:border-strokedark">
                        <div class="flex items-center space-x-3.5">
                          <%= link_to food, 
                              class: "rounded-md bg-blue-600 p-2 text-white transition hover:bg-blue-700 hover:shadow-md" do %>
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                          <% end %>
                          
                          <%= link_to edit_food_path(food), 
                              class: "rounded-md bg-amber-500 p-2 text-white transition hover:bg-amber-600 hover:shadow-md" do %>
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                          <% end %>
                          
                          <%= button_to food, 
                              method: :delete,
                              data: { turbo_confirm: "Tem certeza?" },
                              class: "rounded-md bg-red-600 p-2 text-white transition hover:bg-red-700 hover:shadow-md" do %>
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <!-- Estado vazio -->
  <div class="rounded-sm border border-stroke bg-white shadow-default dark:border-strokedark dark:bg-boxdark">
    <div class="p-12">
      <div class="text-center">
        <div class="mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-full bg-slate-100 dark:bg-slate-800">
          <% if params[:search].present? %>
            <svg class="h-10 w-10 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          <% else %>
            <svg class="h-10 w-10 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          <% end %>
        </div>
        
        <h3 class="mb-2 text-xl font-semibold text-black dark:text-white">
          <% if params[:search].present? %>
            Alimento não encontrado
          <% else %>
            Nenhum alimento cadastrado ainda
          <% end %>
        </h3>
        
        <p class="mb-6 text-slate-500 dark:text-slate-400">
          <% if params[:search].present? %>
            O alimento "<strong><%= params[:search] %></strong>" não está cadastrado na sua base de alimentos.
            <br>Que tal cadastrá-lo agora?
          <% else %>
            Comece criando sua base de alimentos para poder usar nas dietas
          <% end %>
        </p>
        
        <div class="flex flex-col gap-3 sm:flex-row sm:justify-center">
          <% if params[:search].present? %>
            <%= link_to new_food_path(name: params[:search]), 
                class: "inline-flex items-center justify-center gap-2.5 rounded-md bg-green-600 px-8 py-3 text-center font-medium text-white transition hover:bg-green-700 hover:shadow-lg" do %>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Cadastrar "<%= params[:search] %>"
            <% end %>
            
            <%= link_to foods_path, 
                class: "inline-flex items-center justify-center gap-2.5 rounded-md border border-stroke bg-white px-8 py-3 text-center font-medium text-black transition hover:bg-slate-50 dark:border-strokedark dark:bg-boxdark dark:text-white dark:hover:bg-slate-800" do %>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              Ver Todos os Alimentos
            <% end %>
          <% else %>
            <%= link_to new_food_path, 
                class: "inline-flex items-center justify-center gap-2.5 rounded-md bg-green-600 px-8 py-3 text-center font-medium text-white transition hover:bg-green-700 hover:shadow-lg" do %>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Cadastrar Primeiro Alimento
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
