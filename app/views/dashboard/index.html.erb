<div class="row">
  <div class="col-12">
    <h1>Dashboard - <%= current_user.name %></h1>
    <p class="text-muted"><%= current_user.specialty %> | CRN: <%= current_user.license_number %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <h5 class="card-title">Total de Clientes</h5>
        <h2><%= @clients_count %></h2>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body">
        <h5 class="card-title">Clientes Ativos</h5>
        <h2><%= @active_clients %></h2>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body">
        <h5 class="card-title">Base de Alimentos</h5>
        <h2><%= @foods_count %></h2>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-warning text-white">
      <div class="card-body">
        <h5 class="card-title">Receita Total</h5>
        <h2>R$ <%= number_with_precision(@total_revenue, precision: 2, delimiter: '.', separator: ',') %></h2>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>Clientes Recentes</h5>
      </div>
      <div class="card-body">
        <% if @recent_clients.any? %>
          <% @recent_clients.each do |client| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div>
                <strong><%= client.name %></strong><br>
                <small class="text-muted"><%= client.phone_number %></small>
              </div>
              <div>
                <span class="badge bg-<%= client.status == 'active' ? 'success' : 'secondary' %>">
                  <%= client.status.capitalize %>
                </span>
              </div>
            </div>
            <hr>
          <% end %>
        <% else %>
          <p class="text-muted">Nenhum cliente cadastrado ainda.</p>
        <% end %>
        
        <%= link_to "Ver Todos", clients_path, class: "btn btn-primary btn-sm" %>
        <%= link_to "Novo Cliente", new_client_path, class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
  
