<!-- Header do usuário -->
<div class="mb-8">
  <div class="rounded-xl border border-gray-200 bg-white p-8 shadow-md">
    <div class="text-center">
      <h2 class="mb-2 text-2xl font-bold text-gray-900">
        Bem-vindo, <%= current_user.name %>!
      </h2>
      <p class="text-gray-600 text-base">
        <%= current_user.specialty %> | CRN: <%= current_user.license_number %>
      </p>
    </div>
  </div>
</div>

<!-- Cards de Estatísticas -->
<div class="mb-8 grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-4">
  <!-- Total de Clientes -->
  <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-md flex items-center gap-4">
    <div class="flex items-center justify-center rounded-full bg-blue-100 h-14 w-14">
      <svg class="h-7 w-7 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
      </svg>
    </div>
    <div>
      <h4 class="text-xl font-bold text-gray-900"><%= @clients_count %></h4>
      <span class="text-sm text-gray-500 font-medium">Total de Clientes</span>
    </div>
  </div>
  <!-- Clientes Ativos -->
  <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-md flex items-center gap-4">
    <div class="flex items-center justify-center rounded-full bg-green-100 h-14 w-14">
      <svg class="h-7 w-7 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div>
      <h4 class="text-xl font-bold text-gray-900"><%= @active_clients %></h4>
      <span class="text-sm text-gray-500 font-medium">Clientes Ativos</span>
    </div>
  </div>
  <!-- Base de Alimentos -->
  <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-md flex items-center gap-4">
    <div class="flex items-center justify-center rounded-full bg-indigo-100 h-14 w-14">
      <svg class="h-7 w-7 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
      </svg>
    </div>
    <div>
      <h4 class="text-xl font-bold text-gray-900"><%= @foods_count %></h4>
      <span class="text-sm text-gray-500 font-medium">Base de Alimentos</span>
    </div>
  </div>
  <!-- Receita Total -->
  <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-md flex items-center gap-4">
    <div class="flex items-center justify-center rounded-full bg-amber-100 h-14 w-14">
      <svg class="h-7 w-7 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div>
      <h4 class="text-xl font-bold text-gray-900">R$ <%= number_with_precision(@total_revenue, precision: 2, delimiter: '.', separator: ',') %></h4>
      <span class="text-sm text-gray-500 font-medium">Receita Total</span>
    </div>
  </div>
</div>

<!-- Grid Principal -->
<div class="grid grid-cols-1 gap-6 md:grid-cols-2">
  <!-- Clientes Recentes -->
  <div class="rounded-xl border border-gray-200 bg-white shadow-md">
    <div class="border-b border-gray-200 px-8 py-5">
      <div class="flex items-center gap-3">
        <svg class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h3 class="font-medium text-gray-900">Clientes Recentes</h3>
      </div>
    </div>
    <div class="p-8">
      <% if @recent_clients.any? %>
        <div class="space-y-4">
          <% @recent_clients.each do |client| %>
            <div class="flex items-center justify-between rounded-lg border border-gray-100 bg-gray-50 p-4 hover:shadow transition">
              <div>
                <%= link_to client_path(client), class: "font-semibold text-gray-900 hover:text-indigo-600 transition-colors" do %>
                  <%= client.name %>
                <% end %>
                <p class="text-sm text-gray-500"><%= client.phone_number %></p>
              </div>
              <span class="inline-flex rounded-full px-3 py-1 text-xs font-medium 
                <%= client.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= client.status.capitalize %>
              </span>
            </div>
          <% end %>
        </div>
        
     
      <% end %>
    </div>
  </div>

  <!-- Ações Rápidas -->
  <div class="rounded-xl border border-gray-200 bg-white shadow-md flex-col justify-between">
    <div class="border-b border-gray-200 px-8 py-5">
      <div class="flex items-center gap-3">
        <svg class="h-6 w-6 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
        <h3 class="font-medium text-gray-900">Ações Rápidas</h3>
      </div>
    </div>
    <div class="p-8 flex flex-col gap-4">
      <%= link_to new_client_path, class: "flex items-center gap-2 rounded-md bg-green-600 px-5 py-3 text-white font-medium hover:bg-green-700 transition" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
        Novo Cliente
      <% end %>
      <%= link_to foods_path, class: "flex items-center gap-2 rounded-md bg-indigo-600 px-5 py-3 text-white font-medium hover:bg-indigo-700 transition" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
        </svg>
        Gerenciar Alimentos
      <% end %>
      <%= link_to clients_path, class: "flex items-center gap-2 rounded-md bg-amber-600 px-5 py-3 text-white font-medium hover:bg-amber-700 transition" do %>
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        Ver Todos os Clientes
      <% end %>
    </div>
  </div>
</div>