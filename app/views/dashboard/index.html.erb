<div class="container mt-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12 text-center">
      <h4 class="text-muted mb-0">
        <%= current_user.name %> â€” <%= current_user.specialty %> | CRN: <%= current_user.license_number %>
      </h4>
    </div>
  </div>

  <!-- Stat Cards -->
  <div class="row g-3">
    <div class="col-md-3">
      <div class="card shadow-sm border-0 text-center bg-primary text-white rounded-3">
        <div class="card-body">
          <h6 class="fw-semibold">Total de Clientes</h6>
          <h2 class="fw-bold mb-0"><%= @clients_count %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card shadow-sm border-0 text-center bg-success text-white rounded-3">
        <div class="card-body">
          <h6 class="fw-semibold">Clientes Ativos</h6>
          <h2 class="fw-bold mb-0"><%= @active_clients %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card shadow-sm border-0 text-center bg-info text-white rounded-3">
        <div class="card-body">
          <h6 class="fw-semibold">Base de Alimentos</h6>
          <h2 class="fw-bold mb-0"><%= @foods_count %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card shadow-sm border-0 text-center bg-warning text-dark rounded-3">
        <div class="card-body">
          <h6 class="fw-semibold">Receita Total</h6>
          <h2 class="fw-bold mb-0">
            R$ <%= number_with_precision(@total_revenue, precision: 2, delimiter: '.', separator: ',') %>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Clients & Quick Actions -->
  <div class="row mt-5 g-4">
    <!-- Recent Clients -->
    <div class="col-md-6">
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-light">
          <h5 class="mb-0 fw-semibold">ðŸ‘¥ Clientes Recentes</h5>
        </div>
        <div class="card-body">
          <% if @recent_clients.any? %>
            <% @recent_clients.each do |client| %>
              <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                <div>
                  <strong><%= client.name %></strong><br>
                  <small class="text-muted"><%= client.phone_number %></small>
                </div>
                <span class="badge bg-<%= client.status == 'active' ? 'success' : 'secondary' %>">
                  <%= client.status.capitalize %>
                </span>
              </div>
            <% end %>
          <% else %>
            <p class="text-muted">Nenhum cliente cadastrado ainda.</p>
          <% end %>

          <div class="d-flex justify-content-between mt-3">
            <%= link_to "Ver Todos", clients_path, class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-md-6">
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-light">
