<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-indigo-500 to-purple-600 px-4">
  <div class="w-full max-w-md mx-auto bg-white border-l rounded-lg shadow-lg rounded-2xl p-8 transition-shadow hover:shadow-xl">
    <!-- Avatar/Icone -->
    <div class="flex justify-center mb-6">
      <div class="bg-indigo-100 rounded-full p-3">
        <svg class="h-10 w-10 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14c-4 0-7 2-7 4v2h14v-2c0-2-3-4-7-4z"/>
        </svg>
      </div>
    </div>
    <h2 class="text-center text-2xl font-extrabold text-gray-900 mb-2">
      Bem-vindo
    </h2>
    <p class="text-center text-sm text-gray-500 mb-6">
      Fa√ßa login para acessar sua conta
    </p>

    <% if flash[:alert] %>
      <div class="mb-4 text-sm text-red-600 text-center bg-red-50 rounded px-3 py-2 font-medium">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, class: "block w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-50 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all", placeholder: "Digite seu email" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-1" %>
          <%= f.password_field :password, class: "block w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-50 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all", placeholder: "Digite sua senha" %>
        </div>
      </div>

      <%= f.submit "Entrar", class: "w-full mt-6 py-3 px-4 bg-indigo-600 text-white text-base font-semibold rounded-xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all" %>
    <% end %>

    
  </div>
</div>