<!DOCTYPE html>
<html>
  <head>
    <title>Consultoria Nutricional</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

        <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary from-indigo-500">
        <div class="container">
          <%= link_to "Consultoria Nutricional", root_path, class: "navbar-brand" %>

          <div class="navbar-nav me-auto">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
            <%= link_to "Clientes", clients_path, class: "nav-link" %>
            <%= link_to "Alimentos", foods_path, class: "nav-link" %>
          </div>

          <div class="navbar-nav">
            <span class="navbar-text me-3">
              Olá, <%= current_user.name %>
            </span>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-text me-3" %>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Flash Toasts -->
    <div class="toast-container">
      <% if notice %>
        <div class="toast align-items-center text-white bg-success border-0 show auto-dismiss" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body">
              ✅ <%= notice %>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="toast align-items-center text-white bg-danger border-0 show auto-dismiss" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body">
              ❌ <%= alert %>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
          </div>
        </div>
      <% end %>
    </div>

    <div class="container mt-4">
      <%= yield %>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const alerts = document.querySelectorAll(".auto-dismiss");
        alerts.forEach(function (alert) {
          setTimeout(function () {
            const bsAlert = new bootstrap.Toast(alert);
            bsAlert.hide();
          }, 4000); // 4 segundos
        });
      });
    </script>
  </body>
</html>
